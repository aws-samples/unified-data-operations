{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://json-schema.org/draft-07/schema#",
  "title": "Data Product Schema",
  "description": "Used to validate the product.yml that defines the data product execution pipeline",
  "type": "object",
  "required": ["schema_version", "product"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": ["string", "number"],
      "description": "The version of this schema file"
    },
    "product": {
      "type": "object",
      "required": ["id", "version", "owner", "pipeline", "description"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "owner": {
          "type": "string",
          "pattern": "^([A-Za-z0-9]+[.-_])*[A-Za-z0-9]+@[A-Za-z0-9-]+(\\.[A-Z|a-z]{2,})+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "defaults": {
          "$ref": "#/$defs/defaults"
        },
        "engine": {
          "type": "string",
          "enum": ["glue", "emr", "dbt"]
        },
        "pipeline": {
          "$ref": "#/$defs/pipeline"
        }
      }
    }
  },
  "$defs": {
    "defaults": {
      "type": "object"
    },
    "pipeline": {
      "type": "object",
      "required": ["schedule", "tasks"],
      "additionalProperties": false,
      "properties": {
        "schedule": {
          "type": "string",
          "minLength": 1
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/task"
          }
        }
      }
    },
    "task": {
      "type": "object",
      "required": ["id", "inputs", "outputs"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "logic": {
          "$ref": "#/$defs/task_logic"
        },
        "inputs": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/io_type_connection"
              },
              {
                "$ref": "#/$defs/io_type_model"
              },
              {
                "$ref": "#/$defs/io_type_file"
              }
            ]
          }
        },
        "outputs": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/io_type_connection"
              },
              {
                "$ref": "#/$defs/io_type_model"
              },
              {
                "$ref": "#/$defs/io_type_file"
              }
            ]
          }
        }
      }
    },
    "task_logic": {
      "type": "object",
      "additionalProperties": false,
      "required": ["module"],
      "properties": {
        "module": {
          "type": "string",
          "minLength": 1
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "io_type_connection": {
      "type": "object",
      "required": ["connection", "table"],
      "additionalProperties": true,
      "properties": {
        "connection": {
          "type": "string",
          "minLength": 1
        },
        "table": {
          "type": "string",
          "minLength": 1
        },
        "model": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "io_type_model": {
      "type": "object",
      "required": ["model"],
      "additionalProperties": true,
      "properties": {
        "model": {
          "type": "string",
          "mindLength": 1
        }
      }
    },
    "io_type_file": {
      "type": "object",
      "required": ["file"],
      "additionalProperties": true,
      "properties": {
        "file": {
          "type": "string",
          "minLength": 1
        },
        "model": {
          "type": "string",
          "minLength": 1
        },
        "options": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "minLength": 3
            },
            "infer_schema": {
              "type": "boolean"
            },
            "separator": {
              "type": "string",
              "minLength": 1
            },
            "header": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
